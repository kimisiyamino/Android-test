<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetroActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metro_text"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_way1"
        android:onClick="way_gorchakova"
        android:layout_width="148dp"
        android:layout_height="68dp"
        android:text="@string/way_gorchakova"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"


        />

    <Button
        android:id="@+id/button2"
        android:onClick="way_buninskaya"
        android:layout_width="148dp"
        android:layout_height="68dp"
        android:text="@string/way_buninskaya"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_way1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="148dp"
        android:layout_height="68dp"
        android:text="@string/way_back"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button2"
        android:onClick="way_back"/>

</RelativeLayout>