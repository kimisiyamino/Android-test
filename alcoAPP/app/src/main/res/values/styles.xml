<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item> <!-- -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>

        <item name="android:listViewStyle">@style/List</item>>
        <item name="android:textViewStyle">@style/Text</item>>
    </style>

    <style name="List" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/black</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="Text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">#991235</item>
        <item name="android:shadowRadius">5.</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>

</resources>